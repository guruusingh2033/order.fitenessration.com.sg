@import '../../styles/_header'
:host
	.body
		desktop_layout_side-column '.add-ons' '.summary'
		h2
			font-family 'League Spartan'
			text-align center
			text-transform uppercase
			r-font-size 24px 16px
			+on-desktop()
				float left
		.sections-nav
			+on-desktop()
				margin-bottom 10px	
				float left
				clear left
			+on-mobile()
				margin 0 -20px 10px
		.add-ons
			layout_item-list()
			+on-desktop()
				flex-wrap wrap
			> li
				+on-desktop()
					height auto
					cursor default
					margin-left 0
					&:nth-child(2n)
						margin-left 17px
				padding 0
				picture
					square 96px
					display block
					margin 25px auto 20px
					image()
				.name
					display block
					margin 20px auto
					font-size 14px
					font-weight bold
					text-align center
				.description
					margin 0 21px 19px
				.details
					height-vct 50px false
					display block
					border 0 solid #D9D9D9
					border-width 1px 0
					font-weight bold
					text-align center
					text-transform uppercase
				.variants
					li
						height 50px
						position relative
						display flex
						&:not(:last-child)
							border-bottom 1px solid #D9D9D9
						label
							padding-left 18px
							font-weight bold
							font-size 14px
							line-height 50px
						.quantity
							quantity-picker()
							border-left 1px solid #D9D9D9
							padding 0 16px
							width 50%
							height 50px
							position absolute
							bottom 0
							right 0
							position absolute
							left 50%
		.summary
			>>> order
				.delivery-date-time, .delivery-address, .extra
					display none !important
			+on-desktop()
				>>> order
					order_side-summary_desktop()
			+on-mobile()
				z-index 1
				width 100%
				height 170px
				overflow auto
				position fixed
				left 0
				bottom 101px
				background white
				>>> order
					order_item_mobile()
				&:not(.show)
					display none
	.footer
		.next:before
			content ''
		.view-order-summary
			+on-desktop()
				display none !important
			+on-mobile()
				dark-footer-item()
				background-color $accent-b-background-color
				background-image url(/app/common/images/expand.accent-foreground.png)
				&.open
					background-image url(/app/common/images/contract.accent-foreground.png)
