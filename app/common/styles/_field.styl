field()
	>
		label
			field-label()
		textarea
			field-textarea()
		input[type="text"], input[type="password"], input[type="date"], input[type="time"]
			field-text()
field-base()
	background white
	r-font-size 25.48px 12px
	border 1px solid #B7BBC0
	border-radius 3px
	font-family 'Mission Gothic'
	&.ng-invalid.ng-touched, &.braintree-hosted-fields-invalid
		box-shadow 0px 0px 2px 0px #FF0000
field-text()
	field-base()
	r-height 50px 29px
	r-padding2 0 13px 0 8px
	width 100%
field-textarea()
	field-base()
	width 100%
	r-padding 10px 5px
field-label()
	display block
	r-font-size 24px 15px
	r-margin-bottom 9px 5px
	white-space nowrap
