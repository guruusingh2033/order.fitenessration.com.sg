m-padding(args...)
	+on-mobile()
		padding args
d-padding(args...)
	+on-desktop()
		padding args
r-padding(args...)
	+on-desktop()
		if length(args)/2 == 1
			padding args[0]
		if length(args)/2 == 2
			padding args[0] args[1]
		if length(args)/2 == 3
			padding args[0] args[1] args[2]
		if length(args)/2 == 4
			padding args[0] args[1] args[2] args[3]
	+on-mobile()
		if length(args)/2 == 1
			padding args[1]
		if length(args)/2 == 2
			padding args[2] args[3]
		if length(args)/2 == 3
			padding args[3] args[4] args[5]
		if length(args)/2 == 4
			padding args[4] args[5] args[6] args[7]
r-margin(args...)
	+on-desktop()
		if length(args)/2 == 1
			margin args[0]
		if length(args)/2 == 2
