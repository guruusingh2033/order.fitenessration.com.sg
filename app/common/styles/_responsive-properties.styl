r-image(image, desktop-size=null, mobile-size=null)
	if desktop-size
		+on-desktop()
			path = replace('%', s('%s', desktop-size), image)
			background-image url(path)
	if mobile-size
		+on-mobile()
			path = replace('%', s('%s', mobile-size), image)
			background-image url(path)
